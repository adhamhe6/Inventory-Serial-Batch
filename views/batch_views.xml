<odoo>
    <record id="view_batch_tree" model="ir.ui.view">
        <field name="name">product.batch.tree</field>
        <field name="model">product.batch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="expiry_date"/>
                <field name="location_id"/>
            </tree>
        </field>
    </record>

    <record id="view_batch_form" model="ir.ui.view">
        <field name="name">product.batch.form</field>
        <field name="model">product.batch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="expiry_date"/>
                        <field name="location_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
